<assembly>
    <id>Standalone</id>
    <formats>
        <format>zip</format>
        <!-- <format>dir</format> -->
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>

        <!-- ==================== Copying file structure ================= -->
        <fileSet>
            <directory>${project.basedir}/src/main/resources/application</directory>
            <outputDirectory></outputDirectory>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>database</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>messages</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/src/main/resources/application</directory>
            <outputDirectory></outputDirectory>
            <fileMode>777</fileMode>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>

        <!-- ==================== Copying domibusConnectorClientStarter library================= -->
        <fileSet>
            <directory>${project.basedir}/domibusConnectorClientStarter/target/</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
                <exclude>*-javadoc.jar</exclude>
            </excludes>
        </fileSet>

        <!-- ==================== Copying site documentation ================= -->
        <fileSet>
            <directory>${project.basedir}/target/site/</directory>
            <outputDirectory>client-documentation/site</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
